<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings"
    tools:context=".SettingsActivity">

    <Button
        android:id="@+id/button_back2"
        android:layout_width="141dp"
        android:layout_height="54dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#99FF2929"
        android:text="back"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/atomBomb"
        android:layout_width="130dp"
        android:layout_height="97dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:background="#65FF2929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/atombomb" />

    <ImageView
        android:id="@+id/enableDisable"
        android:layout_width="60dp"
        android:layout_height="97dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="64dp"
        android:background="#66FF2929"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/enable" />

    <ImageView
        android:id="@+id/deadSkull"
        android:layout_width="84dp"
        android:layout_height="97dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="180dp"
        android:background="#66FF2929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/skull" />

    <ImageView
        android:id="@+id/enableDisable2"
        android:layout_width="60dp"
        android:layout_height="97dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="64dp"
        android:background="#66FF2929"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/enable" />

</androidx.constraintlayout.widget.ConstraintLayout>